{
  "name": "StopADS!",
  "version": "1.0",
  "description": "Simple advertisement blocker to enhance your experience on the internet.",
  "permissions": ["webRequest", "webRequestBlocking", "http://*/", "https://*/"],
  "background": {
    "scripts": ["blocked_domains.js", "background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}
